<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IdSiber-Eye Client"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2196F3"
        android:gravity="center"
        android:layout_marginBottom="32dp" />
    
    <!-- Device Information Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        
        <TextView
            android:id="@+id/device_id_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device ID: Loading..."
            android:textSize="12sp"
            android:textColor="#666"
            android:fontFamily="monospace" />
            
    </LinearLayout>
    
    <!-- Connection Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connection Status"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        
        <TextView
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disconnected"
            android:textSize="14sp"
            android:textColor="#f44336"
            android:gravity="center"
            android:padding="8dp"
            android:background="#ffebee"
            android:layout_marginBottom="16dp" />
        
        <Button
            android:id="@+id/connect_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect to Server"
            android:textSize="16sp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white" />
            
    </LinearLayout>
    
    <!-- Permissions Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Permissions"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device admin permission is required for remote lock functionality"
            android:textSize="12sp"
            android:textColor="#666"
            android:layout_marginBottom="16dp" />
        
        <Button
            android:id="@+id/admin_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enable Device Admin"
            android:textSize="14sp"
            android:backgroundTint="#ff9800"
            android:textColor="@android:color/white" />
            
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Server: http://192.168.1.100:3000\nChange IP in WebSocketClient.java"
        android:textSize="11sp"
        android:textColor="#999"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Version 1.0.0 - IdSiber Indonesia"
        android:textSize="10sp"
        android:textColor="#ccc"
        android:gravity="center"
        android:layout_marginTop="8dp" />
        
</LinearLayout>